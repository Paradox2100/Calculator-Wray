<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_base_calculator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.alex.calculator.base_calculator">

    <TextView
        android:text="@string/calcDisplay"
        android:inputType="text"
        android:layout_columnSpan="4"
        android:layout_width="270dp"
        android:layout_height="30dp"
        android:id="@+id/calcDisplay"
        android:layout_row="20"
        android:layout_column="11"
        android:textSize="10pt"
        android:background="#ADD8E6"/>

    <Button
        android:text="Clr"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/clearBtn"
        android:layout_row="22"
        android:layout_column="14" />

    <Button
        android:text="Del"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/deleteBtn"
        android:layout_row="22"
        android:layout_column="13" />

    <Button
        android:text="(-)"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/negativeBtn"
        android:layout_row="22"
        android:layout_column="12" />

    <Button
        android:text="+"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/addBtn"
        android:layout_row="23"
        android:layout_column="14" />

    <Button
        android:text="-"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/minusBtn"
        android:layout_row="24"
        android:layout_column="14" />

    <Button
        android:text="*"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/multBtn"
        android:layout_row="25"
        android:layout_column="14" />

    <Button
        android:text="/"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/divBtn"
        android:layout_row="26"
        android:layout_column="14" />

    <Button
        android:text="2"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/twoBtn"
        android:layout_row="23"
        android:layout_column="12" />

    <Button
        android:text="3"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/threeBtn"
        android:layout_row="23"
        android:layout_column="13" />

    <Button
        android:text="4"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/fourBtn"
        android:layout_row="24"
        android:layout_column="11" />

    <Button
        android:text="5"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/fiveBtn"
        android:layout_row="24"
        android:layout_column="12" />

    <Button
        android:text="6"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/sixBtn"
        android:layout_row="24"
        android:layout_column="13" />

    <Button
        android:text="7"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/sevenBtn"
        android:layout_row="25"
        android:layout_column="11" />

    <Button
        android:text="8"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/eightBtn"
        android:layout_row="25"
        android:layout_column="12" />

    <Button
        android:text="9"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/nineBtn"
        android:layout_row="25"
        android:layout_column="13" />

    <Button
        android:text="0"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/zeroBtn"
        android:layout_row="26"
        android:layout_column="11" />

    <Button
        android:text="."
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/decimalBtn"
        android:layout_row="26"
        android:layout_column="12" />

    <Button
        android:text="="
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/equalsBtn"
        android:layout_row="26"
        android:layout_column="13" />

    <Button
        android:text="1"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/oneBtn"
        android:layout_row="23"
        android:layout_column="11" />

    <android.support.v4.widget.Space
        android:layout_height="70dp"
        android:layout_row="19"
        android:layout_column="11"/>

    <android.support.v4.widget.Space
        android:layout_width="90dp"
        android:layout_row="19"
        android:layout_column="14"/>
</GridLayout>
